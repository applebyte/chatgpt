{
  "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "custom": false,
      "palette": [
        {
          "name": "Foreground",
          "slug": "foreground",
          "color": "#111111"
        },
        {
          "name": "Background",
          "slug": "background",
          "color": "#ffffff"
        },
        {
          "name": "Accent",
          "slug": "accent",
          "color": "#0a58ca"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "System",
          "slug": "system",
          "fontFamily": "system-ui, -apple-system, 'Segoe UI', sans-serif"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "slug": "small",
          "size": "0.875rem"
        },
        {
          "name": "Base",
          "slug": "base",
          "size": "1rem"
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "1.5rem"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        }
      }
    }
  }
}
